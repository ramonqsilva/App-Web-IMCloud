generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  history   ImcCalculation[]
}

model ImcCalculation {
  id        Int      @id @default(autoincrement())
  order     Int
  weight    Float
  height    Float
  imcValue  Float
  status    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}