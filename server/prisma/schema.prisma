// O Gerador define como o código JS será criado
generator client {
  provider   = "prisma-client-js"
  engineType = "library" // FORÇA O MOTOR COMPATIVEL COM O RENDER
}

// O Datasource define o tipo de banco (PostgreSQL)
datasource db {
  provider = "postgresql"
}

// Seus modelos de dados para o IMCloud
model User {
  id        Int              @id @default(autoincrement())
  email     String           @unique
  password  String
  history   ImcCalculation[]
}

model ImcCalculation {
  id        Int      @id @default(autoincrement())
  order     Int
  weight    Float
  height    Float
  imcValue  Float
  status    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}