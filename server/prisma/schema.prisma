generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// ... seus modelos User e ImcCalculation continuam abaixo

// 3. Seus Modelos (Obrigat√≥rios para criar as tabelas no Supabase)
model User {
  id        Int              @id @default(autoincrement())
  email     String           @unique
  password  String
  history   ImcCalculation[]
}

model ImcCalculation {
  id        Int      @id @default(autoincrement())
  order     Int
  weight    Float
  height    Float
  imcValue  Float
  status    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}